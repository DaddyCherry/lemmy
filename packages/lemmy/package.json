{
  "name": "lemmy",
  "version": "0.1.0",
  "description": "TypeScript API wrapper for multiple LLM providers (Anthropic, OpenAI, Google, Ollama)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "chalk": "^5.4.1",
    "openai": "^4.63.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "llm",
    "ai",
    "anthropic",
    "openai",
    "google",
    "ollama",
    "typescript",
    "api",
    "wrapper"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
